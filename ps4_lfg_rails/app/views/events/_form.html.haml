= form_for @event, url: game_events_path(@event.game) do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :group_size
    = f.number_field :group_size
  .actions
    = f.submit 'Save', class: 'pure-button'
